{% extends 'base.html.twig' %}

{% block title %}User
{% endblock %}

{% block body %}
	<h1>User</h1>

	<table class="table">
		<tbody>
			<tr>
				<th>Id</th>
				<td>{{ user.id }}</td>
			</tr>
			<tr>
				<th>First_name</th>
				<td>{{ user.firstName }}</td>
			</tr>
			<tr>
				<th>Last_name</th>
				<td>{{ user.lastName }}</td>
			</tr>
			<tr>
				<th>Age</th>
				<td>{{ user.age }}</td>
			</tr>
			<tr>
				<th>Hooby</th>
				<td>{{  user.getHobbyList() ?? '' }}</td>
			</tr>
			<tr>
				<th>Gender</th>
				<td>{{ user.getGender().name }}</td>
			</tr>
			<tr>
				<th>Email</th>
				<td>{{ user.email }}</td>
			</tr>
			<tr>
				<th>Roles</th>
				<td>{{ user.getRoles().name }}</td>
			</tr>
			<tr>
				<th>Created_at</th>
				<td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
			</tr>
			<tr>
				<th>Status</th>
				<td>{{ user.status ? 'Active' : 'Inactive' }}</td>
			</tr>
		</tbody>
	</table>
	<div class="d-flex gap-2">
		<a class="btn btn-dark" href="{{ path('app_user_index') }}">back to list</a>

		<a class="btn btn-info" href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

		{{ include('user/_delete_form.html.twig') }}
	</div>
{% endblock %}
