{{ form_start(form) }}
{# {{ form_widget(form) }} #}
<div class="row">
	<div class="col-md-4">
		<div class="form-group">
			{{ form_label(form.first_name) }}
			{{ form_widget(form.first_name) }}
			<div class="text-danger">{{ form_errors(form.first_name) }}</div>
		</div>
		<div class="form-group">
			{{ form_label(form.last_name) }}
			{{ form_widget(form.last_name) }}
			<div class="text-danger">{{ form_errors(form.last_name) }}</div>
		</div>
		<div class="form-group">
			{{ form_label(form.age) }}
			{{ form_widget(form.age) }}
			<div class="text-danger">{{ form_errors(form.age) }}</div>
		</div>
		<div class="form-group">
			<label class="form-label">Hobbies</label>
			<div class="form-group d-flex gap-4">
				{% for hobby in form.hobby %}
					{{ form_label(hobby) }}
					{{ form_widget(hobby) }}
					<div class="text-danger">{{ form_errors(hobby) }}</div>
				{% endfor %}
			</div>
		</div>
		<div class="form-group">
			{{ form_label(form.gender) }}
			{{ form_widget(form.gender) }}
			<div class="text-danger">{{ form_errors(form.gender) }}</div>
		</div>
		<div class="form-group">
			{{ form_label(form.email) }}
			{{ form_widget(form.email) }}
			<div class="text-danger">{{ form_errors(form.email) }}</div>
		</div>
		<div class="form-group">
			{{ form_label(form.roles) }}
			{{ form_widget(form.roles) }}
			<div class="text-danger">{{ form_errors(form.roles) }}</div>
		</div>
		<div class="form-group">
			{{ form_label(form.status) }}
			{{ form_widget(form.status) }}
			<div class="text-danger">{{ form_errors(form.status) }}</div>
		</div>
	</div>
	<div class="d-flex gap-2 mt-2">
		<button class="btn btn-info">{{ button_label|default('Save') }}</button>
		<a class="btn btn-dark text-white" href="{{ path('app_user_index') }}">back to list</a>
	</div>
</div>
{{ form_end(form) }}
