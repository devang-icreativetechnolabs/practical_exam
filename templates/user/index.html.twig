{% extends 'base.html.twig' %}

{% block title %}User index
{% endblock %}

{% block body %}
	<div class="p-2">
		<h1>User index</h1>
		<div class="d-flex p-3 gap-2">
			<strong>Filters</strong>
			<div class="col-md-3">
				<div class="form-group">
					<label for="userRole">Roles</label>
					<select class="form-control" id="userRole" onchange="appyFilter()">
						<option value="">Select a role</option>
						<option value="1">Admin</option>
						<option value="2">User</option>
						<option value="3">Manager</option>
					</select>
				</div>
			</div>
			<div class="col-md-3">
				<div class="form-group">
					<label for="userStatus">Status</label>

					<select class="form-control" id="userStatus" onchange="appyFilter()">
						<option value="">Select a Status</option>
						<option value="inactive">Inactive</option>
						<option value="active">Active</option>
					</select>
				</div>
			</div>
			<div class="col-md-2">
				<div class="form-group">
					<label for="start_date">Start Date</label>
					<input type="date" class="form-control" onchange="appyFilter()" id="start_date" placeholder="Select Start Date"/>
				</div>
			</div>
			<div class="col-md-2">
				<div class="form-group">
					<label for="end_date">End Date</label>
					<input type="date" class="form-control" onchange="appyFilter()" id="end_date" placeholder="Select End Date"/>
				</div>
			</div>
			<div class="col-md-2">
				<div class="form-group">
					<button class="btn btn-info" onclick="clearFilter();">Clear Filters</button>
					<a class="btn btn-success mt-2" href="{{ path('app_user_new') }}">Create new</a>
				</div>
			</div>
		</div>

		<table class="table p-2" id="UserTable">
			<thead>
				<tr>
					<th>Id</th>
					<th>First Name</th>
					<th>Last Name</th>
					<th>Age</th>
					<th>Hooby</th>
					<th>Gender</th>
					<th>Email</th>
					<th>Roles</th>
					<th>Created On</th>
					<th>Status</th>
					<th>actions</th>
				</tr>
			</thead>
			<tbody></tbody>
		</table>
	</div>
{% endblock %}

{% block javascripts %}
<script src="http://code.jquery.com/jquery-1.11.2.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
<script src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>

<script>
    function appyFilter() {
        $('#UserTable').DataTable().ajax.reload();
    }
    function clearFilter() {
        $('#userRole').val("");
        $('#userStatus').val("");
        $('#start_date').val('');
        $('#end_date').val('');
        $('#UserTable').DataTable().ajax.reload();
    }
    $(document).ready(function () {
        $('#UserTable').DataTable({
            processing: true,
            serverSide: true,
            ajax: {
                url: "/user/user-get-data",
                data: function (d) {
                    d.role = $('#userRole').val();
                    d.status = $('#userStatus').val();
                    d.start_date = $('#start_date').val();
                    d.end_date = $('#end_date').val();
                }
            },
            columns: [
                {
                data: 'id'
                },
                {
                data: 'first_name'
                },
                {
                data: 'last_name'
                },
                {
                data: 'age'
                }, {
                data: 'hobby'
                }, {
                data: 'gender'
                }, {
                data: 'email'
                }, {
                data: 'roles'
                }, {
                data: 'createdAt'
                }, {
                data: 'status'
                }, {
                data: 'actions',
                orderable: false,
                searchable: false
                }
            ]
        });
    });
	</script>
{% endblock %}
